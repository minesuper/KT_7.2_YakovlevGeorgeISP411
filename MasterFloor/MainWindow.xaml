<Window x:Class="MasterFloor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterFloor"
        mc:Ignorable="d"
        Title="ИС - Мастер Пол" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" MinHeight="800" MinWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#F4E8D3">
            <Image Source="/Resources/Мастер пол.png" Margin="10"
                   HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Мастер Пол" FontSize="32"
                   HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
        </Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"
               Grid.Row="1"></Frame>
    </Grid>
</Window>
